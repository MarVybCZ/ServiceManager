<UserControl x:Class="ServiceManager.Controls.GridViewTextColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <TextBlock Width="auto" Name="TBData" Text="{Binding ColumnData}" ToolTipService.IsEnabled="True" Margin="0,0,0,0">    
            <TextBlock.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Name="TBToolTip" Text="{Binding ColumnData}" />
                        <!--<TextBlock FontWeight="Bold" Text="{Binding ColumnData}"/>-->
                        <!--<TextBlock>Submits the request to the server.</TextBlock>-->
                    </StackPanel>
                </ToolTip>
            </TextBlock.ToolTip>
        </TextBlock>
    </Grid>
</UserControl>
